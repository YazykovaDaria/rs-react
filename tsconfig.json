{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "ESNext", "dom.iterable"],
    "jsx": "react",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "types": ["vite/client", "node", "vitest/globals", "cypress"],
    "paths": {
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "include": [
    ".eslintrc.cjs",
    "vite.config.ts",
    "src",
    "cypress.config.ts",
    "server",
    "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
  },
}
